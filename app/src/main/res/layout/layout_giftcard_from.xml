<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <View
        android:layout_width="75dp"
        android:layout_height="3dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/tvGiftCardSenderDetailsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:gravity="center|start"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textAppearance="@style/CustomTextAppearance.SemiBold"
        android:textColor="@color/colorReferCode"
        android:textSize="@dimen/text_size_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSenderNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAppearance="@style/CustomTextAppearance.Light"
            android:textColor="@color/nine_grey"
            android:textSize="@dimen/text_size_small" />

        <EditText
            android:id="@+id/etSenderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textNoSuggestions|textCapWords|textPersonName"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textAppearance="@style/CustomTextAppearance.Light"
            android:textSize="@dimen/text_size_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:background="@color/seperator_color" />

        <TextView
            android:id="@+id/tvMessageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAppearance="@style/CustomTextAppearance.Light"
            android:textColor="@color/nine_grey"
            android:textSize="@dimen/text_size_small" />

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/bg_white_round_corners_edittext"
            android:gravity="top|start"
            android:lines="5"
            android:maxLength="150"
            android:nestedScrollingEnabled="true"
            android:padding="7dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/CustomTextAppearance.Light"
            android:textColor="@color/et_text_color"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

</LinearLayout>