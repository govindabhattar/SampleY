<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="3dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCV"
            android:layout_width="@dimen/_70dp"
            android:layout_height="@dimen/_70dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10dp"
            android:elevation="@dimen/_5dp"
            app:cardCornerRadius="@dimen/_6dp">

            <com.tookancustomer.utility.SquareImageView
                android:id="@+id/ivNLevelImage"
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:scaleType="fitCenter" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageCV"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlTopLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivNLevelImage">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:layout_toStartOf="@+id/rlCartQuantityLayout"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCartName"
                        style="@style/CustomTextAppearance.MavenMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/tvCartDesc"
                        style="@style/CustomTextAppearance.Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/medium_grey"
                        android:textSize="@dimen/text_size_medium"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvInitialPrice"
                        style="@style/CustomTextAppearance.MavenMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/text_size_medium" />

                    <LinearLayout
                        android:id="@+id/llProductTiming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvProductStartTime"
                            style="@style/CustomTextAppearance.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/colorReferCode"
                            android:textSize="@dimen/text_size_medium" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvMinProductQuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/CustomTextAppearance.Regular"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone"
                        tools:text="Minimum quantity 5" />

                    <TextView
                        android:id="@+id/tvMaxProductQuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/CustomTextAppearance.Regular"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone"
                        tools:text="Minimum quantity 5" />

                    <CheckBox
                        android:id="@+id/rbtnReturn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rbtn_text_opt_for_return"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rlCartQuantityLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivDeleteItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_delete_address" />

                    <TextView
                        android:id="@+id/tvSingleSelectionBtnCheckout"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/bg_white_round_layer_shadow"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textAppearance="@style/CustomTextAppearance.SemiBold"
                        android:textColor="@drawable/text_selector_accent_textview"
                        android:textSize="@dimen/text_size_medium"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/llMultiSelectLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <include
                            layout="@layout/layout_item_quantity_selector"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        style="@style/CustomTextAppearance.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/text_size_medium"
                        android:visibility="gone" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/questionnaireRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivNLevelImage"
                android:layout_toEndOf="@+id/ivNLevelImage"
                android:visibility="gone">

                <TextView
                    android:id="@+id/viewQuestionnaireTV"
                    style="@style/CustomTextAppearance.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/questionnaireAmountTV"
                    style="@style/CustomTextAppearance.MavenMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/text_size_normal" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductTaxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/questionnaireRL"
                android:layout_toEndOf="@+id/ivNLevelImage" />
        </LinearLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/seperator_color" />

</LinearLayout>
