<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/default_padding_bill_breakdown_history"
    android:paddingBottom="@dimen/default_padding_bill_breakdown_history">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTaxTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textAlignment="viewStart"
            android:layout_toStartOf="@+id/tvTaxValue"
            android:textAppearance="@style/CustomTextAppearance.Light"
            android:textColor="@color/colorReferCode"
            android:textSize="@dimen/text_size_medium13" />

        <TextView
            android:id="@+id/tvTaxValue"
            style="@style/CustomTextAppearance.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorReferCode"
            android:textSize="@dimen/text_size_medium13" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTaxSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/subtext_billbreakdown"
        android:textSize="@dimen/text_size_medium13"
        android:visibility="gone" />

    <View
        android:id="@+id/viewSeperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/stroke_light_grey_alpha" />

</LinearLayout>
