<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tvGiftCardDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/nine_grey"
        android:textSize="@dimen/text_size_normal" />

    <View
        android:layout_width="75dp"
        android:layout_height="3dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/tvGiftCardAmountHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:gravity="center|start"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textAppearance="@style/CustomTextAppearance.SemiBold"
        android:textColor="@color/colorReferCode"
        android:textSize="@dimen/text_size_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tookancustomer.plugin.MaterialEditText
            android:id="@+id/etGiftCardAmount"
            style="@style/edit_profile_edittext"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:inputType="numberDecimal"
            app:met_primaryColor="@color/edit_text_line_color_light"
            android:paddingTop="5dp"
            android:textColorHint="@color/et_hint_color"
            android:textSize="@dimen/text_size_medium"
            app:met_floatingLabel="normal"
            app:met_floatingLabelAlwaysShown="true"
            app:met_textColorHint="@color/et_hint_color" />

    </LinearLayout>

</LinearLayout>