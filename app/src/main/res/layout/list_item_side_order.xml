<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llNLevelParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/selector_grey"
        android:gravity="center"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/rlNLevelImageParent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginEnd="12dp"
            android:background="@drawable/background_round_corners"
            android:gravity="center">

            <com.tookancustomer.utility.SquareImageView
                android:id="@+id/ivNLevelImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_image_placeholder"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/ivFoodType"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/veg"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/llRatingImageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shadow_dark_up"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_star_filled_golden" />

                <TextView
                    android:id="@+id/tvAverageRatingImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:textAppearance="@style/CustomTextAppearance.Regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivAddToCart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="3dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/ic_add_address"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFoodTypeNoImage"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/veg"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/layoutProductDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/layoutAddRemove"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDescription1"
                                android:layout_width="@dimen/_100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:ellipsize="end"
                                android:lineSpacingExtra="2dp"
                                android:maxLines="1"
                                android:text="kfhlwsdhdesdffASDFSDF"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/CustomTextAppearance.MavenMedium"
                                android:textColor="@color/primary_text_color"
                                android:textSize="@dimen/text_size_medium13" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="@dimen/_100dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.tookancustomer.utility.TextViewStrikeThrough
                                        android:id="@+id/tvDescription3_"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_10dp"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textAlignment="viewStart"
                                        android:textAppearance="@style/CustomTextAppearance.Regular"
                                        android:textColor="@color/text_color_light_less"
                                        android:textSize="@dimen/text_size_small"
                                        android:visibility="gone"
                                        tools:text="Rs4345adsf" />

                                    <TextView
                                        android:id="@+id/tvDescription3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textAlignment="viewStart"
                                        android:textAppearance="@style/CustomTextAppearance.Regular"
                                        android:textColor="@color/primary_text_color"
                                        android:textSize="@dimen/text_size_small"
                                        android:visibility="gone"
                                        tools:text="Rs4545aasdfsdfsdfsdfdsfdsfdsfdsfdsfdsfsdf" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvDescriptionDiscount"
                                    android:layout_width="@dimen/_100dp"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/CustomTextAppearance.Regular"
                                    android:textColor="@color/text_color_light_less"
                                    android:textSize="@dimen/text_size_tiny"
                                    android:visibility="gone"
                                    tools:text="20% off " />

                            </LinearLayout>

                        </LinearLayout>

                        <include
                            android:id="@+id/layoutAddRemove"
                            layout="@layout/layout_item_quantity_selector"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvDescription2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/CustomTextAppearance.Regular"
                        android:textColor="@color/colorBillBreakDowns"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvMinProductQuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/CustomTextAppearance.Regular"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone"
                        tools:text="Minimum quantity 5" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginEnd="10dp"-->
        <!--android:layout_marginStart="10dp"-->
        <!--android:background="@color/seperator_color" />-->
</LinearLayout>