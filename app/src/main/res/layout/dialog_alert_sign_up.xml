<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/popup_cornered_border"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:padding="1dp"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/black_80"
        android:textSize="@dimen/_20sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textAppearance="@style/CustomTextAppearance.SemiBold"
        android:textColor="@color/popup_message_color"
        android:textSize="@dimen/text_size_normal" />
    <!--<TextView-->
    <!--android:id="@+id/tvMessage1"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_marginStart="20dp"-->
    <!--android:layout_marginEnd="20dp"-->
    <!--android:gravity="center_horizontal"-->
    <!--android:text="@string/sign_up_popup"-->
    <!--android:textAlignment="center"-->
    <!--android:textAppearance="@style/CustomTextAppearance.SemiBold"-->
    <!--android:textColor="@color/popup_message_color"-->
    <!--android:textSize="@dimen/text_size_large" />-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_dialog_cornered_bottom"
        android:padding="15dp"
        android:textAllCaps="true"
        android:textAppearance="@style/CustomTextAppearance.Medium"
        android:textColor="@color/popup_btn_bg_pressed_color"
        android:textSize="@dimen/text_size_normal" />
</LinearLayout>