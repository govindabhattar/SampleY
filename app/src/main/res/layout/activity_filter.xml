<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgTransparentFilterPage"
    tools:context="com.tookancustomer.filter.FilterActivity">


    <RelativeLayout
        android:id="@+id/rlOutside"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:layout_weight="0.7"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_15dp">


            <RelativeLayout
                android:id="@+id/rlClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp">

                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="@dimen/_17dp"
                    android:layout_height="@dimen/_17dp"
                    app:srcCompat="@drawable/ic_close" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_toEndOf="@+id/rlClose"
                android:textAppearance="@style/CustomTextAppearance.Bold"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_normal"
                tools:text="Sort/Filter" />

            <TextView
                android:id="@+id/tvClearAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_20dp"
                android:textAppearance="@style/CustomTextAppearance.Bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_normal"
                tools:text="Clear All" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColorFilterRecycler" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerFilter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/bgColorFilterRecycler" />


            <View
                android:layout_width="@dimen/_1dp"
                android:layout_height="match_parent"
                android:background="@color/lineColorFilterRecycler" />

            <RelativeLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/CustomTextAppearance.Light"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="gone" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerOptions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/btnApply" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_above="@+id/btnApply"
                    android:background="@color/lineColorFilterRecycler" />

                <Button
                    android:id="@+id/btnApply"
                    style="@style/rectangle_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="8dp"
                    android:textAppearance="@style/CustomTextAppearance.Light"
                    android:textColor="@color/btn_text_color"
                    android:textSize="@dimen/text_size_large"
                    tools:text="Apply" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
