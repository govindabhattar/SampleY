<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_main_bg_color">

    <fragment
        android:id="@+id/map"
        class="com.tookancustomer.mapfiles.TouchableMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:splitMotionEvents="false"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/centreLocationPivot"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_icon_pin_location"
            android:tag="mwar" />

        <ImageView
            android:id="@+id/centreLocationPivot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/action_bar_color">

        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@drawable/bg_selector_transparent_grey"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotationY="@integer/locale_mirror_flip"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_white_back_arrow"
                android:clickable="false"
                android:duplicateParentState="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlBack"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_30dp"
            android:layout_marginStart="@dimen/_30dp"
            android:background="@drawable/boundary_white_fill"
            android:elevation="@dimen/_10dp"
            android:textAlignment="viewStart"
            android:gravity="center_vertical|start"
            android:padding="@dimen/_10dp"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlMyLocation"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/rlActionBar"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/white_oval"
        android:elevation="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_icon_current_location" />

    </RelativeLayout>

    <Button
        android:id="@+id/btNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom"
        android:layout_margin="@dimen/_30dp"
        android:layout_weight="1"
        android:background="@drawable/app_button_background_slightly_rounded"
        android:textAllCaps="false"
        android:textAppearance="@style/CustomTextAppearance.Light"
        android:textColor="@color/btn_text_color"
        android:textSize="@dimen/text_size_extra_large" />

</RelativeLayout>