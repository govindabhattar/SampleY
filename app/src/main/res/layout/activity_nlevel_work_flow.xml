<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:focusable="false"
        android:splitMotionEvents="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlParentImage"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/rlBackHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_selector_transparent_grey"
                    android:padding="@dimen/activity_vertical_margin">

                    <ImageView
                        android:id="@+id/ivBackHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:duplicateParentState="true"
                        android:rotationY="@integer/locale_mirror_flip"
                        app:srcCompat="@drawable/ic_back" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@+id/rlSearchHeader"
                    android:layout_toEndOf="@+id/rlBackHeader"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textAppearance="@style/CustomTextAppearance.Avenir"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/header_text_size" />

                <RelativeLayout
                    android:id="@+id/rlSearchHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_selector_transparent_grey"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingEnd="@dimen/_10dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivSearchHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:clickable="false"
                        android:duplicateParentState="true"
                        app:srcCompat="@drawable/ic_search_new_pressed" />

                    <ImageView
                        android:id="@+id/ivPreOrderDateTime"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/ivSearchHeader"
                        android:clickable="false"
                        android:duplicateParentState="true"
                        android:visibility="gone"
                        app:srcCompat="@drawable/icon_calender" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/tvHeading"
                    android:visibility="gone">


                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/rlSearchHeader"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/rlFilterSortHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_selector_transparent_grey"
                        android:padding="@dimen/activity_vertical_margin"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:clickable="false"
                            android:duplicateParentState="true"
                            android:rotationY="@integer/locale_mirror_flip"
                            app:srcCompat="@drawable/ic_filters" />
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/vwHeader"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rlParentImage"
                android:background="@color/colorDividerLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/vwHeader"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layoutPreorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorDividerLine"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingTop="@dimen/_5dp"
                    android:paddingEnd="@dimen/_10dp"
                    android:paddingBottom="@dimen/_5dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvPreorderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preorder"
                        android:textAppearance="@style/CustomTextAppearance.SemiBold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone"
                        tools:text="Preorder"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tvPreorderDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="@style/CustomTextAppearance.SemiBold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone"
                        tools:text="Preorder"
                        tools:visibility="visible" />


                </RelativeLayout>

                <com.tookancustomer.utility.CustomTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lighter_grey"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="@style/CustomTextAppearance.Regular"
                    android:textColor="@color/text_color"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/ic_other_address_copy" />

                <LinearLayout
                    android:id="@+id/llfilterView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/light_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="12dp"
                                    app:srcCompat="@drawable/icon_calender" />

                                <com.tookancustomer.plugin.MaterialEditText
                                    android:id="@+id/etFilterDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawablePadding="@dimen/_10dp"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:textAppearance="@style/CustomTextAppearance.Avenir"
                                    android:textColor="@color/primary_text_color"
                                    android:textSize="@dimen/text_size_small"
                                    app:met_floatingLabelTextColor="@color/colorAccent"
                                    app:met_hideUnderline="true"
                                    app:met_textColorHint="@color/primary_text_color" />

                                <!--<TextView-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:text="@string/select_dates"-->
                                <!--android:textAppearance="@style/CustomTextAppearance.Regular"-->
                                <!--android:textColor="@color/colorPrimary"-->
                                <!--android:textSize="@dimen/text_size_tiny" />-->

                                <!--<TextView-->
                                <!--android:id="@+id/tvFilterDate"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:textAppearance="@style/CustomTextAppearance.Regular"-->
                                <!--android:textColor="@color/primary_text_color"-->
                                <!--android:textSize="@dimen/text_size_small" />-->


                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="?actionBarSize"
                            android:background="@color/light_grey" />


                        <LinearLayout
                            android:id="@+id/llFilter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_5dp">

                            <com.tookancustomer.utility.CustomTextView
                                android:id="@+id/tvFilter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/_10dp"
                                android:gravity="center"
                                android:textAppearance="@style/CustomTextAppearance.Regular"
                                android:textColor="@color/primary_text_color"
                                android:textSize="@dimen/text_size_small"
                                app:drawableStartCompat="@drawable/icon_filter" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/light_grey" />


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlMerchantDynamicPages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivLeftArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/selector_grey"
                        android:padding="8dp"
                        android:rotation="180"
                        app:srcCompat="@drawable/ic_arrow_black" />

                    <ImageView
                        android:id="@+id/ivRightArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/selector_grey"
                        android:padding="8dp"
                        app:srcCompat="@drawable/ic_arrow_black" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMerchantDynamicPages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/ivRightArrow"
                        android:layout_toEndOf="@+id/ivLeftArrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rvMerchantDynamicPages"
                        android:background="@color/light_grey" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llVegSwitchLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvVegOnlyLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CustomTextAppearance.Regular"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/text_size_small" />

                    <Switch
                        android:id="@+id/switchVegFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:id="@+id/frameLayoutNLevel"
                        style="@style/app_main_view_layout"
                        android:paddingTop="0dp" />

                    <LinearLayout
                        android:id="@+id/llNoProductAvailableLoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvNoProductFoundLoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:textAppearance="@style/CustomTextAppearance.Regular"
                            android:textColor="@color/primary_text_color"
                            android:textSize="@dimen/text_size_medium" />

                        <Button
                            android:id="@+id/btnGoToLocationActivity"
                            style="@style/rounded_button_style"
                            android:layout_margin="28dp"
                            android:textAppearance="@style/CustomTextAppearance.SemiBold"
                            android:textColor="@color/btn_text_color"
                            android:textSize="@dimen/text_size_large" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="25dp"
            android:orientation="vertical">

            <include layout="@layout/slider_menu" />

        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</RelativeLayout>