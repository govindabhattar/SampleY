<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_header_common" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlActionBar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="3dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/tvRepeat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textColor="@color/et_text_color"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="Repeat" />

                        <LinearLayout
                            android:id="@+id/llSelectDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvRepeatDays"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5dp"
                                android:drawableEnd="@drawable/ic_two_circling_arrows"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/CustomTextAppearance.Light"
                                android:textColor="@color/text_color_dark"
                                android:textSize="@dimen/text_size_normal"
                                tools:text="Days" />

                            <TextView
                                android:id="@+id/tvSelectedDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5dp"
                                android:gravity="end"
                                android:textAppearance="@style/CustomTextAppearance.Light"
                                android:textColor="@color/text_color_light_less"
                                android:textSize="@dimen/text_size_medium"
                                tools:text="Mon,Tue,Wed" />
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:background="@color/seperator_color" />

                        <TextView
                            android:id="@+id/tvStartDateLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            android:gravity="end"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textColor="@color/dark_hint"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="@string/start_date" />

                        <EditText
                            android:id="@+id/etStartDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:drawableEnd="@drawable/ic_calendar_accent"
                            android:focusable="false"
                            android:focusableInTouchMode="true"
                            android:hint="@string/select_start_date"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textSize="@dimen/text_size_medium" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:background="@color/seperator_color" />

                        <TextView
                            android:id="@+id/tvStartTimeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            android:gravity="end"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textColor="@color/dark_hint"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="@string/start_time" />

                        <EditText
                            android:id="@+id/etStartTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:cursorVisible="true"
                            android:drawableEnd="@drawable/ic_clock"
                            android:focusable="false"
                            android:focusableInTouchMode="true"
                            android:hint="@string/select_start_time"
                            android:maxLines="1"
                            android:textAlignment="viewStart"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textSize="@dimen/text_size_medium" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="3dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <RadioGroup
                        android:id="@+id/rgSubscriptionEnd"
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/_5dp"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rbEndDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/end_date" />

                        <RadioButton
                            android:id="@+id/rbEndAfter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ends_after" />
                    </RadioGroup>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="3dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:orientation="vertical"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:id="@+id/tvEndDateLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            android:gravity="end"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textColor="@color/dark_hint"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="@string/end_date" />

                        <EditText
                            android:id="@+id/etEndDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:drawableEnd="@drawable/ic_calendar_accent"
                            android:focusable="false"
                            android:hint="@string/select_end_date"
                            android:maxLines="1"
                            android:textAlignment="viewStart"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvEndAfter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="3dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_5dp"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:id="@+id/tvEndAfterLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            android:gravity="end"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textColor="@color/dark_hint"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="@string/ends_after" />

                        <EditText
                            android:id="@+id/etEndAfter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvEndAfterLabel"
                            android:layout_toStartOf="@+id/tvOccurrenceLabel"
                            android:background="@color/transparent"
                            android:cursorVisible="true"
                            android:layout_marginTop="@dimen/_5dp"
                            android:focusableInTouchMode="true"
                            android:hint=""
                            android:maxLines="1"
                            android:inputType="number"
                            android:textAlignment="viewStart"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="10" />

                        <TextView
                            android:id="@+id/tvOccurrenceLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvEndAfterLabel"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_5dp"
                            android:gravity="end"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textColor="@color/dark_hint"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="@string/occurrence" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/tvSubscribe"
            style="@style/rectangle_button_style_full"
            android:layout_alignParentBottom="true"
            android:text="@string/subscribe" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </FrameLayout>
</RelativeLayout>