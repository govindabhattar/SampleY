<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="3dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/button_corner_radius"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_transparent_menu_item_selector"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp">

        <RelativeLayout
            android:id="@+id/rlStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textViewStatus"
                style="@style/AllTasksAdapterLabel"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvOrderStatus"
                style="@style/AllTasksAdapterValue"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_8dp"
                android:layout_toStartOf="@+id/chatIV"
                android:layout_toEndOf="@id/textViewStatus"
                android:textAppearance="@style/CustomTextAppearance.Medium" />

            <ImageView
                android:id="@+id/chatIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                card_view:srcCompat="@drawable/ic_chat_active" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textViewId"
                style="@style/AllTasksAdapterLabel" />

            <TextView
                android:id="@+id/tvOrderId"
                style="@style/AllTasksAdapterValue"
                android:layout_toEndOf="@id/textViewId" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPickupTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvPickupDetails"
                style="@style/AllTasksAdapterLabel" />

            <TextView
                android:id="@+id/tvPickupDate"
                style="@style/AllTasksAdapterValue"
                android:layout_toEndOf="@id/tvPickupDetails" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDeliveryTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvDeliveryDetails"
                style="@style/AllTasksAdapterLabel" />

            <TextView
                android:id="@+id/tvDeliveryDate"
                style="@style/AllTasksAdapterValue"
                android:layout_toEndOf="@id/tvDeliveryDetails" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvPrice"
                style="@style/AllTasksAdapterLabel" />

            <TextView
                android:id="@+id/tvOrderPrice"
                style="@style/AllTasksAdapterValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/tvreorder"
                android:layout_toEndOf="@id/tvPrice" />

            <TextView
                android:id="@+id/tvreorder"
                style="@style/AllTasksAdapterValue"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_5dp"
                android:drawableEnd="@drawable/ic_refresh"
                android:drawablePadding="@dimen/_5dp"
                android:visibility="gone"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlRatings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvRatings"
                style="@style/AllTasksAdapterLabel" />

            <LinearLayout
                android:id="@+id/llShowRatings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tvRatings"
                android:orientation="horizontal" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_trackOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_14dp"
            android:paddingTop="@dimen/dimen_4dp"
            android:textAppearance="@style/CustomTextAppearance.Medium"
            tools:text="@string/order_status_text"
            android:background="?selectableItemBackground"
            android:textColor="@color/color_order_status"
            android:textSize="@dimen/_12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>