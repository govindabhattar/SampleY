<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btAddAnotherAddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlActionBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/action_bar_color"
            android:elevation="10dp">

            <RelativeLayout
                android:id="@+id/rlBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_selector_transparent_grey"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:rotationY="@integer/locale_mirror_flip"
                    app:srcCompat="@drawable/ic_back" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvSearchLocation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/rlBack"
                android:background="@color/lightest_grey"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/side_menu_text_color"
                android:textSize="@dimen/text_size_normal"
                android:visibility="visible" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shadow_gradient" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/layout_shimmer_animation" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFavouriteHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blackOpacityFive"
                        android:letterSpacing="0.03"
                        android:padding="@dimen/_10dp"
                        android:textColor="#333333"
                        android:textSize="11.5sp"
                        android:visibility="gone" />

                    <com.tookancustomer.utility.CustomTextView
                        android:id="@+id/tvAddHomeAddress"
                        style="@style/CustomTextAppearance.Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:background="@drawable/ripple_normal_zero_corner"
                        android:drawablePadding="@dimen/_10dp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_5dp"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingEnd="@dimen/_15dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:textSize="@dimen/text_size_medium"
                        android:visibility="gone"
                        app:drawableEndCompat="@drawable/ic_add_address"
                        app:drawableStartCompat="@drawable/ic_home_address" />

                    <RelativeLayout
                        android:id="@+id/rlHomeLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_normal_zero_corner"
                        android:padding="@dimen/_10dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivHomeIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_home_address" />

                        <LinearLayout
                            android:id="@+id/llHomeAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/ibHomeOptions"
                            android:layout_toEndOf="@+id/ivHomeIcon"
                            android:background="@drawable/ripple_normal_zero_corner"
                            android:orientation="vertical"
                            android:padding="@dimen/_10dp">

                            <TextView
                                android:id="@+id/tvHome"
                                style="@style/CustomTextAppearance.Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:drawablePadding="@dimen/_10dp"
                                android:inputType="textCapSentences"
                                android:singleLine="true"
                                android:textColor="@color/medium_grey"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvHomeAddress"
                                style="@style/CustomTextAppearance.Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/text_size_normal" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/ibHomeOptions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ripple_normal_zero_corner"
                            android:padding="@dimen/_10dp"
                            app:srcCompat="@drawable/ic_address_options" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/vwOne"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_margin="@dimen/_10dp"
                        android:background="@color/seperator_color"
                        android:visibility="gone" />

                    <com.tookancustomer.utility.CustomTextView
                        android:id="@+id/tvAddWorkAddress"
                        style="@style/CustomTextAppearance.Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:background="@drawable/ripple_normal_zero_corner"
                        android:drawablePadding="@dimen/_10dp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_5dp"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingEnd="@dimen/_15dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:textSize="@dimen/text_size_medium"
                        android:visibility="gone"
                        app:drawableEndCompat="@drawable/ic_add_address"
                        app:drawableStartCompat="@drawable/ic_work_address" />

                    <RelativeLayout
                        android:id="@+id/rlWorkLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_normal_zero_corner"
                        android:padding="@dimen/_10dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivWorkIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_work_address" />

                        <LinearLayout
                            android:id="@+id/llWorkAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/ibWorkOptions"
                            android:layout_toEndOf="@+id/ivWorkIcon"
                            android:background="@drawable/ripple_normal_zero_corner"
                            android:orientation="vertical"
                            android:padding="@dimen/_10dp">

                            <TextView
                                android:id="@+id/tvWork"
                                style="@style/CustomTextAppearance.Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:drawablePadding="@dimen/_10dp"
                                android:inputType="textCapSentences"
                                android:singleLine="true"
                                android:textColor="@color/medium_grey"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvWorkAddress"
                                style="@style/CustomTextAppearance.Light"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/text_size_normal" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/ibWorkOptions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ripple_normal_zero_corner"
                            android:padding="@dimen/_10dp"
                            app:srcCompat="@drawable/ic_address_options" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/vwTwo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_margin="@dimen/_10dp"
                        android:background="@color/seperator_color"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvOtherLocations"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.tookancustomer.utility.CustomTextView
                        android:id="@+id/tvAddOtherAddress"
                        style="@style/CustomTextAppearance.Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:background="@drawable/ripple_normal_zero_corner"
                        android:drawablePadding="@dimen/_10dp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_5dp"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingEnd="@dimen/_15dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:textSize="@dimen/text_size_medium"
                        android:visibility="gone"
                        app:drawableEndCompat="@drawable/ic_add_address"
                        app:drawableStartCompat="@drawable/ic_other_address_copy" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/btAddAnotherAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_30dp"
        android:background="@drawable/app_button_background_slightly_rounded"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/tvNoIntermet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5dp"
        android:gravity="center"
        android:visibility="gone" />
</RelativeLayout>