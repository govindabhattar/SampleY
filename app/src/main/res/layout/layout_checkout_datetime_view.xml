<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSelectDateTime"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:visibility="visible"
    android:visibility="gone">

    <com.tookancustomer.utility.CustomTextView
        android:id="@+id/tvDateTimeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:gravity="center|start"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/colorReferCode"
        android:textSize="@dimen/text_size_medium" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rgInstantSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbInstant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:padding="15dp"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/CustomTextAppearance.Regular"
                    android:textColor="@color/nine_grey"
                    android:textSize="@dimen/text_size_medium" />

                <RadioButton
                    android:id="@+id/rbSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/CustomTextAppearance.Regular"
                    android:textColor="@color/nine_grey"
                    android:textSize="@dimen/text_size_medium" />

                <RadioButton
                    android:id="@+id/rbSubscribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/CustomTextAppearance.Regular"
                    android:textColor="@color/nine_grey"
                    android:textSize="@dimen/text_size_medium" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/llStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:visibility="visible">

                <com.tookancustomer.plugin.MaterialEditText
                    android:id="@+id/etStartDateTime"
                    style="@style/CustomTextAppearance.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:longClickable="false"
                    android:textAlignment="viewStart"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelAlwaysShown="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEndDateSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-5dp"
                android:orientation="vertical"
                android:visibility="visible">

                <com.tookancustomer.plugin.MaterialEditText
                    android:id="@+id/etEndDateTimeSchedule"
                    style="@style/CustomTextAppearance.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:longClickable="false"
                    android:textAlignment="viewStart"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelAlwaysShown="true" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>