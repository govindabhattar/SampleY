<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_header_common" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llTotalQuantity"
        android:layout_below="@+id/rlActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCustomizeItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="true"
                android:scrollbars="vertical"

                android:splitMotionEvents="false" />

            <TextView
                android:id="@+id/tvSideOrderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvCustomizeItem"
                android:layout_margin="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:padding="@dimen/_5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSideOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSideOrderLabel"
                android:layout_marginTop="@dimen/_5dp"
                android:fadeScrollbars="true"
                android:scrollbars="vertical"
                android:splitMotionEvents="false" />
        </RelativeLayout>
    </ScrollView>


    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="8dp"-->
    <!--android:layout_below="@+id/rlActionBar"-->
    <!--android:background="@drawable/shadow_down_new" />-->

    <RelativeLayout
        android:id="@+id/llTotalQuantity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/app_button_background_rect">

        <TextView
            android:id="@+id/tvAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15dp"
            android:textAppearance="@style/CustomTextAppearance.SemiBold"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tvSubTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_transparent_20"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:textAppearance="@style/CustomTextAppearance.SemiBold"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

</RelativeLayout>