<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlActionBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="@dimen/header_height"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_selector_transparent_grey">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:duplicateParentState="true"
                android:rotationY="@integer/locale_mirror_flip"
                app:srcCompat="@drawable/ic_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/rlBack"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:layout_toLeftOf="@+id/layoutRightCorner"
            android:textAppearance="@style/CustomTextAppearance.Avenir"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/header_text_size" />

        <LinearLayout
            android:id="@+id/layoutRightCorner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            tools:visibility="gone">

            <ImageView
                android:layout_width="@dimen/header_height"
                android:layout_height="match_parent"
                android:background="@drawable/bg_selector_transparent_grey"
                android:padding="20dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_close"
                tools:visibility="visible" />

            <ImageView
                android:layout_width="@dimen/header_height"
                android:layout_height="match_parent"
                android:background="@drawable/bg_selector_transparent_grey"
                android:padding="@dimen/_10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_chat_active"
                tools:visibility="visible" />


            <ImageView
                android:layout_width="@dimen/header_height"
                android:layout_height="match_parent"
                android:background="@drawable/bg_selector_transparent_grey"
                android:padding="@dimen/_10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_locate_active"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ivShareMerchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_selector_transparent_grey"
                android:padding="@dimen/_10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_share"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ivSearchHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_selector_transparent_grey"
                android:padding="@dimen/_10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_search_new_pressed"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ivUnSelectWishlist"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center"

                android:layout_marginEnd="@dimen/_10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_favourite_unselect"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/ivSelectWishlist"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_10dp"

                app:srcCompat="@drawable/ic_favourite_selected"

                tools:visibility="visible" />

            <RelativeLayout
                android:id="@+id/rlInvisible"
                android:layout_width="@dimen/header_height"
                android:layout_height="match_parent"
                android:background="@drawable/bg_selector_transparent_grey"
                android:padding="@dimen/_10dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnSkip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:textAllCaps="false"
                android:textAppearance="@style/CustomTextAppearance.Avenir"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_large"
                android:visibility="gone"
                tools:text="Skip"
                tools:visibility="visible" />


        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/vwShadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorDividerLine" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:max="100"
        android:min="0"
        android:visibility="gone"
        tools:visibility="visible" />


</LinearLayout>