<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_2dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_selector_reward_plan"
            android:orientation="vertical"
            android:padding="@dimen/_15dp">

            <TextView
                android:id="@+id/tvPlanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/CustomTextAppearance.SemiBold"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_large"
                tools:text="Plan 1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPlanDesc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:textAppearance="@style/CustomTextAppearance.Regular"
                    android:textSize="@dimen/text_size_medium"
                    tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry." />


                <ImageView
                    android:id="@+id/ivRewardImage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    app:srcCompat="@drawable/ic_reward_highlighted" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvActivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/btn_activate_selector"
                android:paddingBottom="@dimen/_10dp"
                android:paddingEnd="@dimen/_30dp"
                android:paddingStart="@dimen/_30dp"
                android:paddingTop="@dimen/_10dp"
                android:textAllCaps="false"
                android:textAppearance="@style/CustomTextAppearance.Regular"
                android:textSize="@dimen/text_size_medium"
                tools:text="Activate" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50dp"
        android:elevation="@dimen/_10dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_green_tick" />

</RelativeLayout>
