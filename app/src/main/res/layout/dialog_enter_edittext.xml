<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/popup_cornered_border"
    android:elevation="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:paddingTop="10dp"
        android:textAppearance="@style/CustomTextAppearance.SemiBold"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingEnd="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/popup_message_color"
        android:textSize="@dimen/text_size_medium" />

    <EditText
        android:id="@+id/etEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:background="@drawable/bg_white_round_corners_edittext"
        android:padding="10dp"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/primary_text_color"
        android:textColorHint="@color/medium_grey"
        android:textSize="@dimen/text_size_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_dialog_left"
            android:textAllCaps="true"
            android:textAppearance="@style/CustomTextAppearance.Medium"
            android:textColor="@drawable/dialog_text_color"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_dialog_right"
            android:textAllCaps="true"
            android:textAppearance="@style/CustomTextAppearance.Medium"
            android:textColor="@drawable/dialog_text_color"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>


</LinearLayout>