<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/ic_close" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/_20dp"
        android:paddingStart="@dimen/_20dp">

        <TextView
            android:id="@+id/tvPreorderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/CustomTextAppearance.Bold"
            android:textSize="@dimen/text_size_large"
            tools:text="Preorder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivStoreImage"
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                app:srcCompat="@drawable/ic_profile_placeholder" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_10dp">

                <TextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/CustomTextAppearance.SemiBold"
                    tools:text="Chillies" />

                <TextView
                    android:id="@+id/tvStoreAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/CustomTextAppearance.SemiBold"
                    tools:text="Chandigarh Sec 28" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20dp">

        <TextView
            android:id="@+id/tvScheduleDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/CustomTextAppearance.SemiBold"
            tools:text="Schedule your delivery " />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:orientation="horizontal">

            <com.tookancustomer.utility.CustomTextView
                android:id="@+id/tvSelectDate"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/bg_round_corners_grey_stroke"
                android:drawablePadding="@dimen/_10dp"
                app:drawableStartCompat="@drawable/icon_calender"
                android:padding="@dimen/_10dp"
                android:textAppearance="@style/CustomTextAppearance.Regular"
                android:textSize="@dimen/text_size_small"
                tools:text="Select Date" />

            <com.tookancustomer.utility.CustomTextView
                android:id="@+id/tvSelectTime"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_round_corners_grey_stroke"
                android:drawablePadding="@dimen/_10dp"
                app:drawableStartCompat="@drawable/icon_calender"
                android:padding="@dimen/_10dp"
                android:textAppearance="@style/CustomTextAppearance.Regular"
                android:textSize="@dimen/text_size_small"
                tools:text="Select Time" />


        </LinearLayout>


        <Button
            android:id="@+id/btnSubmit"
            style="@style/rectangle_button_style_full"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_10dp"
            tools:text="Submit" />
    </LinearLayout>


</LinearLayout>