<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.tookancustomer.utility.CustomTextView
        android:id="@+id/tvAddressHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:gravity="center|start"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/colorReferCode"
        android:textSize="@dimen/text_size_medium" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llSelfPickupDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llHomeDelivery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/rlDeliveryView"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorAccent" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivHomedelivery"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center_vertical"/>

                            <com.tookancustomer.utility.CustomTextView
                                android:id="@+id/tvHomeDelivery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:paddingLeft="5dp"
                                android:paddingEnd="5dp"
                                android:text="Home Delivery"
                                android:textAppearance="@style/CustomTextAppearance.Regular"
                                android:textColor="@color/primary_text_color"
                                android:textSize="@dimen/text_size_medium13" />
                        </LinearLayout>


                       <!-- <com.tookancustomer.utility.CustomTextView
                            android:id="@+id/tvHomeDelivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:padding="12dp"
                            android:textAppearance="@style/CustomTextAppearance.Regular"
                            android:textColor="@color/primary_text_color"
                            android:textSize="@dimen/text_size_medium13"
                            app:drawableStartCompat="@drawable/ic_home_delivery_active" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSelfPickup"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rlPickup"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorAccent" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivSelfPickup"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center_vertical"/>

                            <com.tookancustomer.utility.CustomTextView
                                android:id="@+id/tvSelfPickup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:paddingLeft="5dp"
                                android:paddingEnd="5dp"
                                android:text="Take Away"
                                android:textAppearance="@style/CustomTextAppearance.Regular"
                                android:textColor="@color/primary_text_color"
                                android:textSize="@dimen/text_size_medium13"/>

                        </LinearLayout>


                        <!--<com.tookancustomer.utility.CustomTextView
                            android:id="@+id/tvSelfPickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:padding="12dp"
                            android:textAppearance="@style/CustomTextAppearance.Regular"
                            android:textColor="@color/primary_text_color"
                            android:textSize="@dimen/text_size_medium13"
                            app:drawableStartCompat="@drawable/ic_pickup_active" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPickAndDrop"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"

                        tools:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/rlPickAndDropView"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorAccent" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivPickAndDrop"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center_vertical"/>

                            <com.tookancustomer.utility.CustomTextView
                                android:id="@+id/tvPickAndDrop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:paddingLeft="5dp"
                                android:paddingEnd="5dp"
                                android:text="Pick And Drop"
                                android:textAppearance="@style/CustomTextAppearance.Regular"
                                android:textColor="@color/primary_text_color"
                                android:textSize="@dimen/text_size_medium13"/>

                        </LinearLayout>

                        <!--<com.tookancustomer.utility.CustomTextView
                            android:id="@+id/tvPickAndDrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:padding="12dp"
                            android:textAppearance="@style/CustomTextAppearance.Regular"
                            android:textColor="@color/primary_text_color"
                            android:textSize="@dimen/text_size_medium13"
                            app:drawableStartCompat="@drawable/ic_pick_drop_selected" />-->

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shadow_gradient" />

            </LinearLayout>

            <com.tookancustomer.utility.CustomTextView
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_grey"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:drawablePadding="5dp"
                android:padding="15dp"
                android:layout_margin="2dp"
                android:textAlignment="viewStart"
                android:textAppearance="@style/CustomTextAppearance.Light"
                android:textSize="@dimen/text_size_medium"
                tools:visibility="visible"
                app:drawableEndCompat="@drawable/ic_arrow_black" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>