<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cvRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <!--card_view:cardBackgroundColor="@color/white"-->
        <!--card_view:cardCornerRadius="@dimen/button_corner_radius"-->
        <!--&gt;-->

        <RelativeLayout
            android:id="@+id/rlOptionItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">


            <TextView
                android:id="@+id/tvCustomizeOptionItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tvCustomizeOptionItemPrice"
                android:layout_toEndOf="@+id/ivCustomizeOptionItem"
                android:gravity="center_vertical|start"
                android:textAppearance="@style/CustomTextAppearance.Light"
                android:textAlignment="viewStart"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text_size_medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/ivCustomizeOptionItem"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/check_box_unchecked"
                android:tag="mwar" />

            <TextView
                android:id="@+id/tvCustomizeOptionItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textAppearance="@style/CustomTextAppearance.SemiBold"
                android:textColor="@color/colorTip"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>

        <View
            android:id="@+id/vSep"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/rlOptionItem"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorDividerLine" />
    </RelativeLayout>

</LinearLayout>