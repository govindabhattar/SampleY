<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/app_top_main_layout">

    <androidx.core.widget.NestedScrollView
        style="@style/app_main_view_layout"
        android:layout_above="@+id/tvPurchaseGiftCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <include layout="@layout/layout_giftcard_amount"/>

            <include layout="@layout/layout_giftcard_from"/>

            <include layout="@layout/layout_giftcard_recipient" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tvPurchaseGiftCard"
        style="@style/rectangle_button_style_full"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>