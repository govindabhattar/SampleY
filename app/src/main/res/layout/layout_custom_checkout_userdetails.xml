<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llUserDetailsParentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layoutPickupAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <com.tookancustomer.utility.CustomTextView
            android:id="@+id/tvUserPickupDetailsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:gravity="center|start"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textAppearance="@style/CustomTextAppearance.Regular"
            android:textColor="@color/colorReferCode"
            android:textSize="@dimen/text_size_medium" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">


                <com.tookancustomer.utility.CustomTextView
                    android:id="@+id/etUserPickupAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selector_transparent_grey"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/CustomTextAppearance.Light"
                    android:textSize="@dimen/text_size_medium"
                    app:drawableEndCompat="@drawable/ic_arrow_black" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <CheckBox
            android:id="@+id/cbDeliverAddressSameAsPickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-6dp"
            android:textAppearance="@style/CustomTextAppearance.Regular"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDeliveryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tookancustomer.utility.CustomTextView
            android:id="@+id/tvUserDetailsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:gravity="center|start"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textAppearance="@style/CustomTextAppearance.Regular"
            android:textColor="@color/colorReferCode"
            android:textSize="@dimen/text_size_medium" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">


                <com.tookancustomer.utility.CustomTextView
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selector_transparent_grey"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/CustomTextAppearance.Light"
                    android:textSize="@dimen/text_size_medium"
                    app:drawableEndCompat="@drawable/ic_arrow_black" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>