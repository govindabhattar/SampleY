<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlUnavailNet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:visibility="gone">

    <TextView
        android:id="@+id/tvNoNetConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/tvRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="5dp"
        android:textAppearance="@style/CustomTextAppearance.Bold"
        android:textColor="@drawable/text_selector_accent_textview"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

</LinearLayout>