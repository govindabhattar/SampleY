<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:padding="@dimen/_10dp">

        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tvDeliveryAddressHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_marginStart="12dp"
                android:text="@string/delivery_address"
                android:textAppearance="@style/CustomTextAppearance.Bold"
                android:textColor="#040201"
                android:textSize="@dimen/text_size_large" />

            <ImageView
                android:id="@+id/ivCloseDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:padding="@dimen/_5dp"
                app:srcCompat="@drawable/ic_baseline_close_24" />


        </LinearLayout>

        <ImageView
            android:id="@+id/ivLocationImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llHeader"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_delete_locations" />


        <TextView
            android:id="@+id/tvDeliveringTo"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLocationImage"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center"
            android:text="@string/delivering_to"
            android:textAllCaps="true"
            android:textAppearance="@style/CustomTextAppearance.SemiBold"
            android:textColor="@color/et_hint_color"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDeliveringTo"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center"
            android:text="CDCL,Madhya Marg,28B, Sector 28B, Chandigarh, India, 160028"
            android:textAppearance="@style/CustomTextAppearance.Bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddress"

            >

            <Button
                android:id="@+id/btnChangeAddress"
                style="@style/rectangle_button_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_20dp"
                android:layout_weight="1"
                android:background="@drawable/app_button_new_accent"
                android:padding="8dp"
                android:text="@string/change"
                android:textAppearance="@style/CustomTextAppearance.Bold"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />

            <Button
                android:id="@+id/btnConfirmAddress"
                style="@style/rectangle_button_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_weight="1"
                android:background="@drawable/app_button_background_slightly_rounded_pricecolor"
                android:padding="8dp"
                android:text="@string/confirm"
                android:textAppearance="@style/CustomTextAppearance.Bold"
                android:textColor="@color/btn_text_color"
                android:textSize="@dimen/text_size_large" />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
