<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llDynamicPageParentView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_grey"
    android:padding="8dp">

    <com.tookancustomer.utility.CustomTextView
        android:id="@+id/tvDynamicPageHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selector_for_delivery_type"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="20dp"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/text_size_medium"/>

</LinearLayout>