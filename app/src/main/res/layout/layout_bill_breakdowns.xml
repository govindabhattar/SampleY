<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tookancustomer.utility.CustomTextView
        android:id="@+id/tvBillHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:gravity="center|start"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/colorReferCode"
        android:textSize="@dimen/text_size_medium" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTaxesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTotalHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textAppearance="@style/CustomTextAppearance.Regular"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textAppearance="@style/CustomTextAppearance.MavenMedium"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/text_size_large" />
            </RelativeLayout>

            <View
                android:id="@+id/viewSeperator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/default_padding_top"
                android:background="@color/seperator_color"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvRecurringTotalHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/_5dp"
                    android:layout_toStartOf="@+id/tvRecurringTotal"
                    android:textAppearance="@style/CustomTextAppearance.Regular"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/text_size_normal"
                    tools:text="asdfjhskdfdfdfdfdfsdffhdssdfsdffdfkfhjsdf" />

                <TextView
                    android:id="@+id/tvRecurringTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/CustomTextAppearance.MavenMedium"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/text_size_large"
                    tools:text="122" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/deliverySurgeChargesTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:padding="@dimen/_5dp"
        android:textColor="@color/colorAccent"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_5dp"
        android:textSize="@dimen/text_size_normal"
        android:text="@string/view_delivery_surge_charges" />

</LinearLayout>