<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlActionBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/action_bar_color">

        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_selector_transparent_grey"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:duplicateParentState="true"
                android:rotationY="@integer/locale_mirror_flip"
                app:srcCompat="@drawable/ic_back" />

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_right_left"
            android:paddingEnd="@dimen/padding_right_left">

            <TextView
                android:id="@+id/tvResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/_10dp"
                android:letterSpacing="0.05"
                android:textAppearance="@style/CustomTextAppearance.Light"
                android:textColor="@color/heading_text_color_onboard"
                android:textSize="@dimen/text_size_xxl" />

            <TextView
                android:id="@+id/tvResetPasswordMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:textAppearance="@style/CustomTextAppearance.Light"
                android:textColor="@color/heading_text_color_onboard"
                android:textSize="@dimen/text_size_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_10dp">

                <com.tookancustomer.plugin.MaterialEditText
                    android:id="@+id/etNewPassword"
                    style="@style/edittext_style"
                    android:inputType="textPassword"
                    android:maxLength="25"
                    android:textAppearance="@style/CustomTextAppearance.Light"
                    android:textSize="@dimen/text_size_large"
                    app:met_underlineColor="@color/edit_text_line_color_light" />

                <ImageButton
                    android:id="@+id/ibViewNewPassword"
                    android:layout_width="@dimen/password_eye_width"
                    android:layout_height="@dimen/password_eye_height"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:background="@color/transparent"
                    android:padding="15dp"
                    app:srcCompat="@drawable/ic_eye_inactive" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_10dp">

                <com.tookancustomer.plugin.MaterialEditText
                    android:id="@+id/etConfirmPassword"
                    style="@style/edittext_style"
                    android:inputType="textPassword"
                    android:maxLength="25"
                    android:textAppearance="@style/CustomTextAppearance.Light"
                    android:textSize="@dimen/text_size_large"
                    app:met_underlineColor="@color/edit_text_line_color_light" />

                <ImageButton
                    android:id="@+id/ibViewConfirmPassword"
                    android:layout_width="@dimen/password_eye_width"
                    android:layout_height="@dimen/password_eye_height"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:background="@color/transparent"
                    android:padding="15dp"
                    app:srcCompat="@drawable/ic_eye_inactive" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlResetPasswordButton"
                style="@style/rectangle_button_style"
                android:layout_margin="0dp">

                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    android:textColor="@color/btn_text_color"
                    android:textSize="@dimen/text_size_large" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
