<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/app_top_main_layout">

    <include layout="@layout/layout_header_common" />

    <ScrollView
        android:id="@+id/svFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnApply"
        android:layout_below="@+id/rlActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/app_main_view_layout"
                android:layout_margin="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPriceRange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CustomTextAppearance.Regular"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/text_size_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp"
                        android:clipChildren="false">


                        <com.tookancustomer.customviews.customRangeBar.widgets.CrystalRangeSeekbar
                            android:id="@+id/rangeSeekbar1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:left_thumb_color="@color/colorAccent"
                            app:left_thumb_color_pressed="@color/colorAccent"
                            app:right_thumb_color="@color/colorAccent"
                            app:right_thumb_color_pressed="@color/colorAccent" />

                        <TextView
                            android:id="@+id/tvMinRange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rangeSeekbar1"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tvMaxRange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/rangeSeekbar1"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size_medium" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textAllCaps="true"
                        android:textAppearance="@style/CustomTextAppearance.Regular"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/text_size_medium" />

                    <View style="@style/blank_view_pdp" />


                </LinearLayout>

                <!--Custom Field Number-->
                <LinearLayout
                    android:id="@+id/llCustomFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="vertical"
                    android:showDividers="middle" />
                <!--CustomField Number ends here-->


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnApply"
        style="@style/rectangle_button_style_full"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
