<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg">

    <include layout="@layout/layout_header_common" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnAddMoney"
        android:layout_below="@+id/rlActionBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAvailableBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDividerLine"
                android:gravity="center"
                android:padding="@dimen/_10dp"
                android:textAppearance="@style/CustomTextAppearance.Regular"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_15dp">

                <com.tookancustomer.plugin.MaterialEditText
                    android:id="@+id/etEnterAmount"
                    style="@style/edit_profile_edittext"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:inputType="numberDecimal"/>

                <include layout="@layout/layout_makepayment_payment" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnAddMoney"
        style="@style/rectangle_button_style"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
