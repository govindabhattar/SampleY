<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llScheduleDateSlots"
    android:layout_width="65dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/vwScheduleDateHeader"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/shadow_gradient" />

    <TextView
        android:id="@+id/tvScheduleDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="@style/CustomTextAppearance.SemiBold"
        android:textColor="@color/medium_grey"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/tvScheduleDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textAppearance="@style/CustomTextAppearance.SemiBold"
        android:textColor="@color/medium_grey"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/tvScheduleMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:padding="5dp"
        android:textAppearance="@style/CustomTextAppearance.SemiBold"
        android:textColor="@color/medium_grey"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone" />

    <View
        android:id="@+id/vwScheduleDateFooter"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/shadow_gradient" />

</LinearLayout>