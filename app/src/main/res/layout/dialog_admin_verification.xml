<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_admin_verification" />


    <TextView
        android:id="@+id/tvReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:gravity="center"
        android:text="Your accout is under review for service owner's approval."
        android:textAppearance="@style/CustomTextAppearance.SemiBold"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/tvApprovalMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:gravity="center"
        android:text="You will get a confirmation email once approved."
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_normal" />

    <Button
        android:id="@+id/btnOk"
        style="@style/rectangle_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/_100dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/app_button_background_slightly_rounded"
        android:imeOptions="actionDone"
        android:padding="8dp"
        android:textAppearance="@style/CustomTextAppearance.Light"
        android:textColor="@color/btn_text_color"
        android:textSize="@dimen/text_size_large" />


</LinearLayout>