<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlActionBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/action_bar_color">

        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_selector_transparent_grey"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:duplicateParentState="true"
                android:rotationY="@integer/locale_mirror_flip"
                app:srcCompat="@drawable/ic_back" />

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="@dimen/padding_right_left"
            android:paddingStart="@dimen/padding_right_left">

            <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal">-->

            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:letterSpacing="0.05"
                android:textAppearance="@style/CustomTextAppearance.Light"
                android:textColor="@color/heading_text_color_onboard"
                android:textSize="@dimen/text_size_xxl" />

            <TextView
                android:id="@+id/tvForgotPasswordMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:textAppearance="@style/CustomTextAppearance.Light"
                android:textColor="@color/heading_text_color_onboard"
                android:textSize="@dimen/text_size_medium" />

            <RelativeLayout
                android:id="@+id/rlEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <View
                    android:id="@+id/vErrorIcon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_icon_verified" />

                <com.tookancustomer.plugin.MaterialEditText
                    android:id="@+id/email"
                    style="@style/edittext_style"
                    android:layout_toEndOf="@+id/llCountryCode"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/text_size_medium15"
                    app:met_underlineColor="@color/edit_text_line_color_light" />

                <LinearLayout
                    android:id="@+id/llCountryCode"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/selector_grey"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvCountryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textAppearance="@style/CustomTextAppearance.UltraLight"
                        android:textColor="@color/et_text_color"
                        android:textSize="@dimen/text_size_large" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:includeFontPadding="false"
                        app:srcCompat="@drawable/ic_icon_country_code_arrow" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSendLink"
                style="@style/rectangle_button_style"
                android:layout_margin="0dp">

                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    android:textColor="@color/btn_text_color"
                    android:textSize="@dimen/text_size_large" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
