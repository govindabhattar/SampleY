    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/textViewItemTotalPrice"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="viewStart"
            android:textAppearance="@style/CustomTextAppearance.Regular"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_16dp" />

        <TextView
            android:id="@+id/textViewItemTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:gravity="end"
            android:textAppearance="@style/CustomTextAppearance.Regular"
            android:textColor="@color/text_color"
            android:textSize="16dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvItemCustomisations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="viewStart"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="2"
            tools:text="sdfsd"
            android:textAppearance="@style/CustomTextAppearance.Regular"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/textViewItemQuantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            tools:text="sdfsd"

            android:textAppearance="@style/CustomTextAppearance.Regular"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvItemChargeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/CustomTextAppearance.Light"
        android:textColor="@color/colorLabel"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvItemStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_14dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvItemEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_14dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductTaxesList"
        android:layout_width="match_parent"
