<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_bg_color">

    <fragment
        android:id="@+id/map"
        class="com.tookancustomer.mapfiles.TouchableMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <include layout="@layout/layout_header_common" />

    <RelativeLayout
        android:id="@+id/rlMyLocation"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/rlActionBar"
        android:layout_margin="@dimen/_10dp"
        android:background="@drawable/white_oval"
        android:elevation="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_icon_current_location" />

    </RelativeLayout>

</RelativeLayout>