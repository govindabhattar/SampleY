<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/app_top_main_layout">

    <include layout="@layout/layout_header_common" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlActionBar">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/svCheckout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tvProceedToPay"
            android:background="@color/grey_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <include layout="@layout/layout_checkout_description" />

                <include layout="@layout/layout_custom_checkout_address" />

                <include layout="@layout/layout_custom_checkout_userdetails" />

                <include layout="@layout/layout_checkout_datetime_view" />

                <TextView
                    android:id="@+id/tvCustomOrderPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llCustomFieldsParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.tookancustomer.utility.CustomTextView
                        android:id="@+id/tvCustomFieldsHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textAllCaps="true"
                        android:textAppearance="@style/CustomTextAppearance.Regular"
                        android:textColor="@color/colorReferCode"
                        android:textSize="@dimen/text_size_medium" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvCustomFields"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/llCustomFields"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/_15dp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <include layout="@layout/layout_checkout_cart_custom" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/tvProceedToPay"
            style="@style/rectangle_button_style_full"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</RelativeLayout>