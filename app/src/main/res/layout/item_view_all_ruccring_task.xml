<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="3dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/button_corner_radius"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_transparent_menu_item_selector"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp">

        <RelativeLayout
            android:id="@+id/rlStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textViewStatus"
                style="@style/AllTasksAdapterLabel" />

            <TextView
                android:id="@+id/tvOrderStatus"
                style="@style/AllTasksAdapterValue"
                android:layout_toEndOf="@id/textViewStatus"
                android:textAppearance="@style/CustomTextAppearance.Medium" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textViewId"
                style="@style/AllTasksAdapterLabel" />

            <TextView
                android:id="@+id/tvOrderId"
                style="@style/AllTasksAdapterValue"
                android:layout_toEndOf="@id/textViewId" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvStartDateLabel"
                style="@style/AllTasksAdapterLabel" />

            <TextView
                android:id="@+id/tvStartDate"
                style="@style/AllTasksAdapterValue"
                android:layout_toEndOf="@id/tvStartDateLabel" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlEndOccurrence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvEndOccurrenceLabel"
                style="@style/AllTasksAdapterLabel" />

            <TextView
                android:id="@+id/tvEndOccurrence"
                style="@style/AllTasksAdapterValue"
                android:layout_toEndOf="@id/tvEndOccurrenceLabel" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvEndDateLabel"
                style="@style/AllTasksAdapterLabel" />

            <TextView
                android:id="@+id/tvEndDate"
                style="@style/AllTasksAdapterValue"
                android:layout_toEndOf="@id/tvEndDateLabel" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvDeliveryTimeLabel"
                style="@style/AllTasksAdapterLabel" />

            <TextView
                android:id="@+id/tvDeliveryTime"
                style="@style/AllTasksAdapterValue"
                android:layout_toEndOf="@id/tvDeliveryTimeLabel" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvPrice"
                style="@style/AllTasksAdapterLabel" />

            <TextView
                android:id="@+id/tvOrderPrice"
                style="@style/AllTasksAdapterValue"
                android:layout_toEndOf="@id/tvPrice" />
        </RelativeLayout>

