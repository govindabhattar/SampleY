<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlParent"
    android:backgroundTint="#90000000"
    android:background="@color/medium_grey"
    android:backgroundTintMode="src_over"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/rlTopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llParentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_80dp"
                    android:padding="@dimen/_15dp"
                    android:src="@mipmap/sidemenu_logo" />

                <TextView
                    android:id="@+id/tvWelcomeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:gravity="center"
                    android:textAppearance="@style/CustomTextAppearance.Medium"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_large" />


                <com.tookancustomer.utility.CustomTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_30dp"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/_10dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/CustomTextAppearance.Regular"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    app:drawableStartCompat="@drawable/ic_icon_dropoff" />

                <LinearLayout
                    android:id="@+id/llfilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:layout_marginStart="@dimen/_15dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llCheckIn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_date" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8dp"
                                android:orientation="vertical">

                                <com.tookancustomer.plugin.MaterialEditText
                                    android:id="@+id/etCheckInDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:gravity="center_vertical|start"
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/CustomTextAppearance.Regular"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/text_size_small"
                                    app:met_floatingLabelTextColor="@android:color/white"
                                    app:met_hideUnderline="true"
                                    app:met_textColorHint="@android:color/white" />

                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="?actionBarSize"
                            android:background="@android:color/white" />


                        <LinearLayout
                            android:id="@+id/llCheckOut"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_5dp">

                            <com.tookancustomer.plugin.MaterialEditText
                                android:id="@+id/etCheckOutDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10dp"
                                android:focusable="false"
                                android:gravity="center_vertical|start"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/CustomTextAppearance.Regular"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_size_small"
                                app:met_floatingLabelTextColor="@android:color/white"
                                app:met_hideUnderline="true"
                                app:met_textColorHint="@android:color/white" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/white" />


                </LinearLayout>

                <Button
                    android:id="@+id/btnFindHomes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_30dp"
                    android:background="@drawable/app_button_background_slightly_rounded"
                    android:padding="8dp"
                    android:textAppearance="@style/CustomTextAppearance.Light"
                    android:textColor="@color/btn_text_color"
                    android:textSize="@dimen/text_size_large" />


            </LinearLayout>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>