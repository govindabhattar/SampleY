<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSelectAgent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <com.tookancustomer.utility.CustomTextView
        android:id="@+id/tvAgentHeader"
        tools:text="agent selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:gravity="center|start"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/colorReferCode"
        android:textSize="@dimen/text_size_medium" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">


            <com.tookancustomer.plugin.MaterialEditText
                android:id="@+id/etSelectAgent"
                style="@style/CustomTextAppearance.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:editable="false"
                tools:text="agent selected"
                android:focusableInTouchMode="false"
                android:longClickable="false"
                android:maxLines="1"
                android:textAlignment="viewStart"
                app:met_floatingLabel="normal"
                app:met_floatingLabelAlwaysShown="true" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>