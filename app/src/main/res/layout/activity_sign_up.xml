<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlActionBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/action_bar_color">

            <RelativeLayout
                android:id="@+id/rlBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_selector_transparent_grey"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    app:srcCompat="@drawable/ic_back" />

            </RelativeLayout>

        </RelativeLayout>

        <ScrollView
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_right_left"
                android:paddingLeft="@dimen/padding_right_left"
                android:paddingEnd="@dimen/padding_right_left"
                android:paddingRight="@dimen/padding_right_left">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSignUpHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:letterSpacing="0.05"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_xxl" />

                    <TextView
                        android:id="@+id/tvSignUpSubHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:letterSpacing="0.05"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/text_size_medium" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_horizontal_margin">

                            <com.tookancustomer.plugin.MaterialEditText
                                android:id="@+id/username"
                                style="@style/edittext_style"
                                android:imeOptions="actionNext"
                                android:inputType="textNoSuggestions|textCapWords|textPersonName"
                                android:maxLength="50"
                                android:textAppearance="@style/CustomTextAppearance.Light"
                                android:textSize="@dimen/text_size_large"
                                app:met_underlineColor="@color/edit_text_line_color_light" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@+id/vErrorIcon"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="20dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_icon_verified" />


                            <com.tookancustomer.plugin.MaterialEditText
                                android:id="@+id/email"
                                style="@style/edittext_style"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress|textNoSuggestions"
                                android:textAppearance="@style/CustomTextAppearance.Light"
                                android:textSize="@dimen/text_size_large"
                                app:met_underlineColor="@color/edit_text_line_color_light" />

                            <RelativeLayout
                                android:id="@+id/emailRL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/emailTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:freezesText="true"
                                    android:gravity="center_vertical"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:textAppearance="@style/CustomTextAppearance.Light"
                                    android:textColor="@color/et_text_color"
                                    android:textSize="@dimen/text_size_extra_large" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/edit_text_line_color_light" />
                            </RelativeLayout>

                            <!--<android.support.design.widget.TextInputLayout-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--&gt;-->

                            <!--<AutoCompleteTextView-->
                            <!--android:id="@+id/email"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textSize="@dimen/text_size_extra_large"-->
                            <!--android:textColorHint="@color/colorHint"-->
                            <!--android:textColor="@color/colorLauncherScreenText"-->
                            <!--android:inputType="textEmailAddress"-->
                            <!--android:maxLines="1"-->
                            <!--android:imeOptions="actionNext"-->
                            <!--android:paddingEnd="35dp"-->
                            <!--android:paddingEnd="@dimen/padding_right"-->
                            <!--android:paddingBottom="22dp"-->
                            <!--/>-->

                            <!--</android.support.design.widget.TextInputLayout>-->
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@+id/vContactErrorIcon"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_icon_verified" />

                            <com.tookancustomer.plugin.MaterialEditText
                                android:id="@+id/contact"
                                style="@style/edittext_style"
                                android:digits="0123456789"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:maxLength="15"
                                android:paddingStart="65dp"
                                android:textAppearance="@style/CustomTextAppearance.Light"
                                android:textSize="@dimen/text_size_large"
                                app:met_underlineColor="@color/edit_text_line_color_light" />

                            <LinearLayout
                                android:id="@+id/rlCountryCode"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/selector_grey"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:orientation="horizontal"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:id="@+id/tvCountryCode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:textAppearance="@style/CustomTextAppearance.UltraLight"
                                    android:textColor="@color/et_text_color"
                                    android:textSize="@dimen/text_size_large" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:includeFontPadding="false"
                                    app:srcCompat="@drawable/ic_icon_country_code_arrow" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@+id/vPasswordErrorIcon"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_icon_verified" />

                            <com.tookancustomer.plugin.MaterialEditText
                                android:id="@+id/password"
                                style="@style/edittext_style"
                                android:layout_alignParentTop="true"
                                android:layout_toEndOf="@+id/vPasswordErrorIcon"
                                android:layout_toRightOf="@+id/vPasswordErrorIcon"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:longClickable="false"
                                android:maxLength="25"
                                android:textAppearance="@style/CustomTextAppearance.Light"
                                android:textSize="@dimen/text_size_large"
                                app:met_underlineColor="@color/edit_text_line_color_light" />

                            <ImageButton
                                android:id="@+id/ibViewPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@color/transparent"
                                android:gravity="center"
                                android:padding="@dimen/activity_horizontal_margin"
                                app:srcCompat="@drawable/ic_eye_inactive" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/llReferralCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:gravity="center_vertical"
                            android:visibility="gone">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.tookancustomer.plugin.MaterialEditText
                                    android:id="@+id/referralCode"
                                    style="@style/edittext_style"
                                    android:imeOptions="actionNext"

                                    android:inputType="textNoSuggestions|textCapWords|textPersonName"
                                    android:maxLength="50"
                                    android:textSize="@dimen/text_size_medium"
                                    app:met_underlineColor="@color/edit_text_line_color_light" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llSelectLanguage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.tookancustomer.plugin.MaterialEditText
                                android:id="@+id/etChooseLanguage"
                                style="@style/edit_profile_edittext"
                                android:focusable="false"
                                app:met_floatingLabel="none" />

                            <Spinner
                                android:id="@+id/spinnerChooseLanguage"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                android:spinnerMode="dialog" />
                        </LinearLayout>

                        <com.tookancustomer.plugin.MaterialEditText
                            android:id="@+id/etAddress"
                            style="@style/edittext_style"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textSize="@dimen/text_size_large"
                            android:visibility="gone"
                            app:met_underlineColor="@color/edit_text_line_color_light" />

                        <LinearLayout
                            android:id="@+id/llTermsConditions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            tools:visibility="gone">

                            <CheckBox
                                android:id="@+id/cbTermsConditions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:checked="false"
                                android:paddingEnd="5dp" />

                            <TextView
                                android:id="@+id/tvTermsConditions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_5dp"
                                android:textAppearance="@style/CustomTextAppearance.Light"
                                android:textColor="@color/primary_text_color"
                                android:textColorLink="@color/colorAccent"
                                android:textSize="@dimen/text_size_normal" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:gravity="center"
                            android:textAppearance="@style/CustomTextAppearance.Light"
                            android:textColor="@color/sub_text_color_onboard"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20dp">

                    <Button
                        android:id="@+id/email_sign_in_button"
                        style="@style/rectangle_button_style"
                        android:layout_width="0dp"
                        android:minHeight="47dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/app_button_background_slightly_rounded"
                        android:imeOptions="actionDone"
                        android:padding="8dp"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        android:textColor="@color/btn_text_color"
                        android:textSize="@dimen/text_size_large"

                        />

                    <TextView
                        android:id="@+id/tvGuestCheckout"
                        style="@style/rectangle_button_style"
                        android:minHeight="47dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/app_button_background_slightly_rounded"
                        android:imeOptions="actionDone"
                        android:padding="8dp"

                        android:textAppearance="@style/CustomTextAppearance.Light"
                        android:textColor="@color/btn_text_color"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:paddingBottom="@dimen/activity_horizontal_margin">

                    <TextView
                        android:id="@+id/tvHaveAnAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.04"
                        android:textAppearance="@style/CustomTextAppearance.Light"
                        android:textColor="@color/sub_text_color_onboard"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/signInTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:letterSpacing="0.04"
                        android:padding="5dp"
                        android:textAppearance="@style/CustomTextAppearance.Regular"
                        android:textColor="@color/tertiary_text_color"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>