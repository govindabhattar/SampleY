<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/vwDeliveryDetailsEmail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tvLabel"
        style="@style/CustomTextAppearance.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:textColor="#707070"
        android:textSize="@dimen/text_size_extra_large"
        tools:text="Label" />

    <RelativeLayout
        android:id="@+id/rlParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llCountryCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_grey"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:textColor="@color/black_80"
                android:textAppearance="@style/CustomTextAppearance.Regular"
                android:textSize="@dimen/text_size_large" />
            <!--android:textColor="@color/et_text_color"-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_icon_country_code_arrow" />
        </LinearLayout>

        <EditText
            android:id="@+id/etCustomFieldValue"
            style="@style/CustomTextAppearance.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/llCountryCode"
            android:layout_toStartOf="@+id/vCustomFieldIcon"
            android:background="@color/transparent"
            android:textSize="@dimen/text_size_large"
            android:textAlignment="viewStart"
            android:textColor="@color/black" />


        <ImageView
            android:id="@+id/vCustomFieldIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_icon_pickup_before_inactive" />
    </RelativeLayout>

    <View
        android:id="@+id/vwBotton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/seperator_color"
        android:visibility="gone" />
</LinearLayout>