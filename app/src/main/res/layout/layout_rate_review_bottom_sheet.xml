<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!--<RatingBar-->
    <!--android:id="@+id/rbRate"-->
    <!--style="@style/starRatingBar"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:numStars="5"-->
    <!--android:stepSize="1" />-->


    <LinearLayout
        android:id="@+id/layoutCancellationCharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvCancellationChargeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/CustomTextAppearance.Regular"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tvCancellationCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/CustomTextAppearance.SemiBold"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvRefundAmountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/CustomTextAppearance.Regular"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tvRefundAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/CustomTextAppearance.SemiBold"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutLoyalityPoints"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvRefundLoyalityPointLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/CustomTextAppearance.Regular"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tvRefundLoyalityPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/CustomTextAppearance.SemiBold"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textAppearance="@style/CustomTextAppearance.SemiBold"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:id="@+id/ivSkipRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_cancel_primary" />

    </RelativeLayout>

    <com.tookancustomer.utility.CustomRatingBar
        android:id="@+id/rbRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:rating="1"
        android:layoutDirection="ltr"
        android:tag="mwar"
        app:halfStars="false"
        app:maxStars="5"
        app:onlyForDisplay="false" />


    <LinearLayout
        android:id="@+id/llCancelReasonDropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.tookancustomer.plugin.MaterialEditText
            android:id="@+id/etCancelReasonDropDown"
            style="@style/edit_profile_edittext"
            android:focusable="false" />

        <Spinner
            android:id="@+id/spinnerCancelReason"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:spinnerMode="dialog" />
    </LinearLayout>


    <com.tookancustomer.plugin.MaterialEditText
        android:id="@+id/etReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="start|top"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions|textCapSentences|textMultiLine"
        android:maxLength="250"
        android:maxLines="6"
        android:padding="10dp"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textCursorDrawable="@drawable/custom_edittext_cursor"
        android:textSize="@dimen/text_size_normal" />

    <Button
        android:id="@+id/btnSubmitRate"
        style="@style/rectangle_button_style_full"
        android:layout_marginTop="10dp" />

</LinearLayout>