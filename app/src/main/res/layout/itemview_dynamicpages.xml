<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llParentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tookancustomer.utility.CustomTextView
        android:id="@+id/tvDynamicPage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_side_menu"
        android:ellipsize="end"
        android:gravity="center|start"
        android:maxLines="1"
        android:paddingEnd="@dimen/_15dp"
        android:paddingStart="@dimen/_15dp"
        android:textAlignment="viewStart"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal" />

    <View style="@style/slider_horizontal_view" />


</LinearLayout>