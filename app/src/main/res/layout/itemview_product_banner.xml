<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/parentNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/rlNLevelParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llNLevelParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_grey"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlNLevelImageParent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_round_corners">

                    <com.tookancustomer.utility.RectangleImageView
                        android:id="@+id/ivNLevelImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter" />

                    <LinearLayout
                        android:id="@+id/llStackIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivNLevelImage"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-60dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:visibility="gone"
                        android:background="@drawable/white_circle">

                        <ImageView
                            android:id="@+id/ivStackIcon"
                            android:layout_width="@dimen/_25dp"
                            android:layout_height="@dimen/_25dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_image_stack" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/ivFoodType"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/veg"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/progressBarAvtar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:duplicateParentState="true"
                        android:src="@drawable/ic_loading_image"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/llRatingImageLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/shadow_dark_up"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_star_filled_golden" />

                        <TextView
                            android:id="@+id/tvAverageRatingImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:textAppearance="@style/CustomTextAppearance.Regular"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutProductDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginEnd="3dp"
                                android:layout_toStartOf="@+id/llPriceLayout"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivFoodTypeNoImage"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginEnd="7dp"
                                    android:src="@drawable/veg"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tvDescription1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="3"
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/CustomTextAppearance.MavenMedium"
                                    android:textColor="@color/primary_text_color"
                                    android:textSize="@dimen/text_size_large" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llPriceLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.tookancustomer.utility.TextViewStrikeThrough
                                        android:id="@+id/tvDescription3_"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_10dp"
                                        android:ellipsize="end"
                                        android:maxLines="3"
                                        android:textAlignment="viewStart"
                                        android:textAppearance="@style/CustomTextAppearance.Regular"
                                        android:textColor="@color/text_color_light_less"
                                        android:textSize="@dimen/text_size_normal"
                                        android:visibility="gone"
                                        tools:text="Rs49" />

                                    <TextView
                                        android:id="@+id/tvDescription3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="3"
                                        android:textAlignment="viewStart"
                                        android:textAppearance="@style/CustomTextAppearance.Regular"
                                        android:textColor="@color/primary_text_color"
                                        android:textSize="@dimen/text_size_normal"
                                        android:visibility="gone"
                                        tools:visibility="visible"

                                        tools:text="Rs40" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvDescriptionDiscount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="3"
                                    android:textAlignment="viewEnd"
                                    android:textAppearance="@style/CustomTextAppearance.Regular"
                                    android:textColor="@color/text_color_light_less"
                                    android:textSize="@dimen/text_size_tiny"
                                    android:visibility="gone"
                                    tools:text="20% off" />

                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/seperator_color" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/layoutAddRemove"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvDescription4Text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="3"
                                        android:textAlignment="viewStart"
                                        android:textAppearance="@style/CustomTextAppearance.Regular"
                                        android:textColor="@color/black_80"
                                        android:textSize="@dimen/text_size_small"
                                        android:textStyle="bold"
                                        tools:visibility="visible"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/tvDescription4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="3dp"
                                        android:ellipsize="end"
                                        android:maxLines="3"
                                        android:text="hello"
                                        android:textAlignment="viewStart"
                                        android:textAppearance="@style/CustomTextAppearance.Regular"
                                        android:textColor="@color/colorBillBreakDowns"
                                        android:textSize="@dimen/text_size_small"
                                        tools:visibility="visible"

                                        android:visibility="gone" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvRecurring"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5dp"
                                    android:drawableStart="@drawable/ic_two_circling_arrows"
                                    android:drawablePadding="@dimen/_5dp"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:textAppearance="@style/CustomTextAppearance.Regular"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/text_size_small"
                                    android:visibility="gone"
                                    tools:text="Subscription Available" />

                                <TextView
                                    android:id="@+id/tvDescription2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:ellipsize="end"
                                    android:lineSpacingExtra="3dp"
                                    android:maxLines="3"
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/CustomTextAppearance.MavenMedium"
                                    android:textColor="@color/text_color_lighter"
                                    android:textSize="@dimen/text_size_small"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tvMore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/_10sp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tvMinProductQuan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/CustomTextAppearance.Regular"
                                    android:textColor="@color/primary_text_color"
                                    android:textSize="@dimen/text_size_small"
                                    android:visibility="visible"
                                    tools:text="Minimum quantity 5" />


                            </LinearLayout>

                            <include
                                android:id="@+id/layoutAddRemove"
                                layout="@layout/layout_item_quantity_selector"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center|end"
                                android:gravity="end" />

                            <include
                                layout="@layout/layout_item_unit_selector"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true" />

                        </RelativeLayout>


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivSelectedProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_select_product_tick" />
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
