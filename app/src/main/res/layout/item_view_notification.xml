<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/bg_selector_transparent_grey"
    android:foreground="@drawable/bg_selector_transparent_grey"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/button_corner_radius"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/notification_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHeaderNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/CustomTextAppearance.SemiBold"
                android:textAlignment="viewStart"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:textAppearance="@style/CustomTextAppearance.Regular"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tvBodyNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="viewStart"
                android:textAppearance="@style/CustomTextAppearance.Regular"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tvDateNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/CustomTextAppearance.Light"
                android:textColor="@color/medium_grey"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>