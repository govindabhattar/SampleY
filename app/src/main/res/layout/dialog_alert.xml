<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/popup_cornered_border"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/CustomTextAppearance.Regular"
        android:textColor="@color/black_80"
        android:textSize="@dimen/text_size_extra_large"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textAppearance="@style/CustomTextAppearance.Regular"
            android:textColor="@color/popup_message_color"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/CustomTextAppearance.Regular"
            android:textColor="@color/popup_message_color"
            android:textSize="@dimen/text_size_large" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_dialog_cornered_bottom"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textAppearance="@style/CustomTextAppearance.Medium"
        android:textColor="@drawable/dialog_text_color"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>